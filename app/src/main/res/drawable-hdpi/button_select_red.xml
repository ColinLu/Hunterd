<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--按下状态-->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- 背景颜色 -->
            <solid android:color="@color/button_red_press" />
            <!-- 边框颜色大小 -->
            <stroke android:width="@dimen/button_selector_stroke" android:color="@color/button_red_press" />
        </shape>
    </item>


    <!--能获取焦点的时候状态-->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <!-- 背景颜色 -->
            <solid android:color="@color/button_red_enabled_true" />
            <!-- 边框颜色大小 -->
            <stroke android:width="@dimen/button_selector_stroke" android:color="@color/button_red_enabled_true" />
        </shape>
    </item>

    <!--不能获取焦点的时候状态以及默认状态-->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <!-- 背景颜色 -->
            <solid android:color="@color/button_red_enabled_false" />
            <!-- 边框颜色大小 -->
            <stroke android:width="@dimen/button_selector_stroke" android:color="@color/button_red_enabled_false" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <!-- 背景颜色 -->
            <solid android:color="@color/button_red_enabled_true" />
            <!-- 边框颜色大小 -->
            <stroke android:width="@dimen/button_selector_stroke" android:color="@color/button_red_enabled_true" />
        </shape>
    </item>

</selector>