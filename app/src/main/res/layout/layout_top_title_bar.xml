<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_top_title_bar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#127ED8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- 左边按钮 -->

        <FrameLayout
            android:id="@+id/frame_title_left"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/image_title_left"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/text_title_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/image_title_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/background_selcet_transparent"
                android:padding="@dimen/padding_big"
                android:scaleType="centerCrop"
                android:src="@mipmap/back"
                android:visibility="invisible" />
        </FrameLayout>
        <!-- 左边 额外-->

        <FrameLayout
            android:id="@+id/frame_title_left_extra"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/image_title_left_extra"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/text_title_left_extra"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp" />
        </FrameLayout>
        <!-- 标题 -->

        <FrameLayout
            android:id="@+id/frame_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/image_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:textColor="#FFFFFFFF"
                android:textSize="22sp" />
        </FrameLayout>
        <!-- 右边 额外-->

        <FrameLayout
            android:id="@+id/frame_title_right_extra"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/image_title_right_extra"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/text_title_right_extra"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp" />
        </FrameLayout>
        <!-- 右边 -->

        <FrameLayout
            android:id="@+id/frame_title_right"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/image_title_right"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/text_title_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />

</LinearLayout>