<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppStyle"
    android:orientation="vertical"
    tools:context="com.colin.hunter.CandidateRecommendStateActivity">

    <include layout="@layout/layout_top_title_bar" />

    <com.colin.hunter.view.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:background="@color/colorPrimary"
        android:textColor="@color/gray_iii"
        android:textSize="16sp"
        app:pstsDividerColor="@color/transparent"
        app:pstsIndicatorColor="@color/white"
        app:pstsIndicatorHeight="2dp"
        app:pstsScaleZoomMax="0.3"
        app:pstsShouldExpand="true"
        app:pstsTextSelectedColor="@color/white"
        app:pstsUnderlineColor="@color/gray_iii" />


    <android.support.v4.view.ViewPager
        android:id="@+id/pager_candidate_recommend_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
