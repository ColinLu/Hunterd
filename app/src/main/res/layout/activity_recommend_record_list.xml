<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppStyle"
    android:orientation="vertical"
    tools:context=".RecommendRecordListActivity">

    <include layout="@layout/layout_top_title_bar" />

    <TextView
        android:id="@+id/text_recommendlist_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_big"
        android:text="@string/text_recommendlist_number" />

    <Spinner
        android:id="@+id/spinner_recommendlist_state"
        android:layout_width="@dimen/item_label_view_width_big"
        android:layout_height="@dimen/title_top_bar_height_small"
        android:background="@color/white"
        android:layout_margin="@dimen/padding_small"
        android:entries="@array/recommend_record_state"
        android:gravity="center" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_recommendlist_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v7.widget.RecyclerView>
</LinearLayout>
