<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector_white_to_gray"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_item_message_head"
        style="@style/ImageViewSmallStyle"
        android:layout_margin="@dimen/margin_small" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/image_small_hight"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_item_message_from"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="系统消息"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_i" />

            <TextView
                android:id="@+id/text_item_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_small"
                android:text="09:46\t\t今天"
                android:textSize="@dimen/text_size_i" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_item_message_position"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="工程总监"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="@dimen/text_size_i" />


        </LinearLayout>

        <TextView
            android:id="@+id/text_item_message_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="又新增了5位合适的候选人"
            android:textSize="12sp" />

        <View style="@style/LineHorizontalStyle" />
    </LinearLayout>

</LinearLayout>
